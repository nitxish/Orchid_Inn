<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/curve_layout_border"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/hotel_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel Name : "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hotel_name_label"
            android:text="n"/>

        <TextView
            android:id="@+id/name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hotel_name_label"
            android:layout_marginTop="10dp"
            android:text="Name : "
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hotel_name_label"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/name_label"
            android:text="nithish" />

        <TextView
            android:id="@+id/check_in_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_tv"
            android:layout_marginTop="10dp"
            android:text="Chech in" />

        <TextView
            android:id="@+id/check_out_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/check_in_tv"
            android:text="Check out" />

        <TextView
            android:id="@+id/adult_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_out_tv"
            android:layout_marginTop="10dp"
            android:text="adult count" />


        <TextView
            android:id="@+id/child_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_out_tv"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/adult_count_tv"
            android:text="Child count" />

        <TextView
            android:id="@+id/room_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adult_count_tv"
            android:layout_marginTop="10dp"
            android:text="room type" />


        <TextView
            android:id="@+id/room_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adult_count_tv"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/room_type_tv"
            android:text="room count" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:text="price" />

        <Button
            android:id="@+id/cancel_room_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="Cancel" />


    </RelativeLayout>
</LinearLayout>